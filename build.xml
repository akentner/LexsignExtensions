sudo cp -R /var/lib/hudson/jobs/LexsignExtensions_Development/workspace/src /var/www/vhosts/lexsign.de/subdomains/dev/httpdocs
sudo chown -R 33:33 /var/www/vhosts/lexsign.de/subdomains/dev/httpdocs-->

    </target>

    <target name="build" depends=""/>
</project>